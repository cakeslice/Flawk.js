    "/client/register": {
      "post": {
        "description": "Register a user and send code to e-mail to use in /register_verify",
        "operationId": "post-register",
        "tags": [
          "public"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "firstName",
                  "lastName",
                  "password"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "recaptchaToken"
          }
        ]
      }
    },
    "/client/register_verify": {
      "post": {
        "description": "Verify user's registration with code from /register",
