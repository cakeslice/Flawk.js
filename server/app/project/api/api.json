            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "verificationCode": {
                    "type": "number"
                  }
                },
                "required": [
                  "email",
                  "verificationCode"
                ]
              }
            }
          }
        },
        "parameters": []
      }
    },
    "/client/forgot_password": {
