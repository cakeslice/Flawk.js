{
	"name": "flawk-frontend",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "14.15.0"
	},
	"scripts": {
		"env:dev": "env-cmd -f ./_env/flawk_dev.env",
		"env:staging": "env-cmd -f ./_env/flawk_staging.env",
		"env:prod": "env-cmd -f ./_env/flawk_prod.env",
		"- MAIN SCRIPTS -": "-----------------------------",
		"start:dev": "npm run env:dev npm run startLocal",
		"start:staging": "npm run env:staging npm run startLocal",
		"start:prod": "npm run env:prod npm run startLocal",
		"start_android:dev": "npm run env:dev npm run startAndroid",
		"start_android:staging": "npm run env:staging npm run startAndroid",
		"start_android:prod": "npm run env:prod npm run startAndroid",
		"start_ios:dev": "npm run env:dev npm run startiOS",
		"start_ios:staging": "npm run env:staging npm run startiOS",
		"start_ios:prod": "npm run env:prod npm run startiOS",
		"build_local:staging": "npm run env:staging npm run buildLocal",
		"build_local:prod": "npm run env:prod npm run buildLocal",
		"build_docker:staging": "npm run env:staging npm run buildPushDocker",
		"build_docker:prod": "npm run env:prod npm run buildPushDocker",
		"build_android:staging": "npm run env:staging npm run buildAndroid",
		"build_android:prod": "npm run env:prod npm run buildAndroid",
		"- HELPER SCRIPTS -": "-----------------------------",
		"startLocal": "react-scripts start",
		"startAndroid": "npm run buildLocal && npx cap sync && cd android && gradlew assembleDebug && gradlew installDebug && cd ..",
		"startiOS": "npm run buildLocal && npx cap sync && npx cap open ios",
		"buildCI": "npx browserslist@latest --update-db updates caniuse-lite && cross-env CI=false SKIP_PREFLIGHT_CHECK=true GENERATE_SOURCEMAP=true react-scripts --max_old_space_size=4096 build && npm run addPreloadLinks",
		"buildLocal": "npm run auditFix && npm run testCI && npm run buildCI",
		"buildPushDocker": "npm run buildLocal && cross-env-shell docker image build -t $DOCKER_IMAGE . -f Dockerfile.local && cross-env-shell docker push $DOCKER_IMAGE && cross-env-shell docker image rm $DOCKER_IMAGE",
		"buildAndroid": "npm run buildLocal && npx cap sync && cd android && gradlew bundleRelease && cd .. && cross-env-shell jarsigner -keystore ./_env/flawk_android_keystore.env -storepass $ANDROID_KEYSTORE_PASS ./android/app/build/outputs/bundle/release/app-release.aab $ANDROID_KEYSTORE_ALIAS",
		"- EXTRA SCRIPTS -": "-----------------------------",
		"precommit": "lint-staged",
		"postinstall": "cd .. && git config core.hooksPath ./git-hooks",
		"eject": "react-scripts eject",
		"test": "cross-env CI=true react-scripts test --env=jsdom --coverage",
		"testCI": "cross-env CI=true react-scripts test --env=jsdom",
		"cypress": "npx cypress open",
		"cypressCI": "npx cypress run",
		"cypressComponent": "npx cypress open-ct",
		"cypressComponentCI": "npx cypress run-ct",
		"prettierFix": "prettier --write ./src",
		"prettierCI": "prettier --check ./",
		"lintCI": "eslint --quiet ./",
		"auditFix": "npm audit fix",
		"auditCI": "npm audit --audit-level=moderate",
		"addPreloadLinks": "babel-node add_preload_links.js"
	},
