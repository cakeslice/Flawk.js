{
	"name": "flawk-backend",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "16.13.0"
	},
	"scripts": {
		"env:dev": "env-cmd -f ./_env/dev.env",
		"env:build": "env-cmd -f ./_env/build.env",
		"- MAIN SCRIPTS -": "-----------------------------",
		"start:dev": "npm run env:dev npm run startLocal",
		"build_local": "npm run env:build npm run buildLocal",
		"build_docker": "npm run env:build npm run buildPushDocker",
		"- HELPER SCRIPTS -": "-----------------------------",
		"startLocalJavascript": "cross-env NODE_PATH=dist/ node --inspect ./dist/server.js",
		"startLocal": "npm run lintCI && tsc-watch --onSuccess \"npm run startLocalJavascript\"",
		"buildCI": "tsc",
		"buildLocal": "npm run auditCI && npm run testCI && npm run buildCI",
		"buildPushDocker": "npm run buildLocal && cross-env-shell docker image build -t $DOCKER_IMAGE . -f Dockerfile.local && cross-env-shell docker push $DOCKER_IMAGE && cross-env-shell docker run caprover/cli-caprover:v2.1.1 caprover deploy --caproverUrl $CAPROVER_URL --caproverPassword $CAPROVER_PASSWORD --caproverApp $CAPROVER_APP --imageName $DOCKER_IMAGE && cross-env-shell docker image rm $DOCKER_IMAGE",
		"- EXTRA SCRIPTS -": "-----------------------------",
		"precommit": "npm-run-all --aggregate-output --parallel auditCI lintTypescriptCI checkStaged",
		"postinstall": "cd .. && git config core.hooksPath ./git-hooks",
		"test": "cross-env JEST=true jest --coverage --runInBand",
		"testCI": "cross-env JEST=true jest --bail --runInBand",
		"prettierFix": "prettier --write ./app",
		"prettierCI": "prettier --check ./",
		"lintCI": "eslint --quiet --cache ./",
		"lintTypescriptCI": "tsc --noEmit --incremental",
		"auditFix": "npm audit fix",
		"auditCI": "npm audit --audit-level=high",
		"generateDatabase": "mtgen --no-populate-overload -o ./app/project/database.gen.ts ./app/project/database.ts && node ./app/core/internal/fixMtgen.js && prettier --write ./app/project/database.gen.ts",
		"checkStaged": "lint-staged"
	},
	"dependencies": {
		"@awaitjs/express": "^0.9.0",
		"@sentry/node": "^6.15.0",
		"@sentry/tracing": "^6.15.0",
		"@vonage/server-sdk": "^2.10.10",
		"aws-sdk": "^2.1035.0",
		"bcryptjs": "^2.4.3",
		"cachegoose": "^8.0.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto-extra": "^1.0.1",
		"delay": "^5.0.0",
		"diacritic-regex": "^1.1.0",
		"express": "^4.17.1",
		"express-mongo-sanitize": "^2.1.0",
		"express-openapi-validator": "^4.13.2",
		"express-paginate": "^1.0.2",
		"git-repo-info": "^2.1.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"make-synchronous": "^0.1.1",
		"moment": "^2.29.1",
		"mongoose": "^6.0.13",
		"mongoose-lean-id": "^0.2.0",
		"mongoose-lean-virtuals": "^0.9.0",
		"node-fetch": "^2.6.7",
		"nodemailer": "^6.7.1",
		"nodemailer-express-handlebars": "^4.0.0",
		"nodemailer-html-to-text": "^3.2.0",
		"postmark": "^2.7.8",
		"rate-limiter-flexible": "^2.3.5",
		"regex-parser": "^2.2.11",
		"response-time": "^2.3.2",
		"socket.io": "^4.4.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.1.6",
		"uuid": "^8.3.2",
		"validator": "^13.7.0",
		"winston-loggly-bulk": "^3.2.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-paginate": "^1.0.1",
		"@types/jest": "^27.0.3",
		"@types/jsonwebtoken": "^8.5.6",
		"@types/lodash": "^4.14.177",
		"@types/mongoose-lean-virtuals": "^0.5.2",
		"@types/node": "^16.11.10",
		"@types/node-fetch": "^2.5.12",
		"@types/nodemailer": "^6.4.4",
		"@types/nodemailer-express-handlebars": "^4.0.2",
		"@types/nodemailer-html-to-text": "^3.1.0",
		"@types/response-time": "^2.3.5",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^8.3.3",
		"@types/validator": "^13.7.0",
		"@types/winston-loggly-bulk": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"cross-env": "^7.0.3",
		"env-cmd": "^10.1.0",
		"eslint": "^8.3.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jest": "^25.3.0",
		"eslint-plugin-jsdoc": "^37.0.3",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-security-node": "^1.0.14",
		"jest": "^27.3.1",
		"lint-staged": "^12.1.2",
		"mongodb-memory-server": "^8.0.2",
		"mongoose-tsgen": "^8.4.7",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"replace-in-file": "^6.3.2",
		"ts-jest": "^27.0.7",
		"tsc-watch": "^4.5.0",
		"typescript": "^4.5.2"
	},
	"lint-staged": {
		"*.{js,jsx,css,less,scss,md,ts,tsx}": [
			"eslint --cache --quiet",
			"prettier --check",
			"cross-env JEST=true jest --bail --runInBand --findRelatedTests"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/coverage/",
			"/dist/"
		],
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"!**/node_modules/**"
		],
		"testMatch": [
			"**/*.test.js",
			"**/*.test.ts",
			"**/*.test.jsx",
			"**/*.test.tsx"
		],
		"modulePaths": [
			"<rootDir>/app/"
		],
		"setupFilesAfterEnv": [
			"./app/core/setupTests.ts"
		]
	}
}
