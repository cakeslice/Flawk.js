{
	"_COMMENT": "Add android:usesCleartextTraffic='true' to <application> in AndroidManifest to test with a local server",
	"appId": "io.flawk.mobile",
	"appName": "Flawk",
	"bundledWebRuntime": false,
	"npmClient": "npm",
	"webDir": "build",
	"plugins": {
		"SplashScreen": {
			"launchAutoHide": false,
			"androidScaleType": "CENTER_CROP",
			"showSpinner": false,
			"splashFullScreen": false,
			"splashImmersive": false,
			"_DOUBLE_SPLASH_FIX": "In styles.xml add: <style name='AppTheme.NoActionBarLaunch' parent='AppTheme.NoActionBar'><item name='android:statusBarColor'>#000000</item><item name='android:navigationBarColor'>#000000</item><item name='android:background'>#000000</item></style>",
			"_BACKGROUND_COLOR:": "See styles.xml for background color",
			"_SCREEN_ORIENTATION": "https://capacitorjs.com/docs/guides/screen-orientation",
			"_STATUS_BAR": "Should be hidden in iOS to avoid overlapping when scrolling. Android should be normal to guarantee notch support"
		}
	},
	"cordova": {},
	"backgroundColor": "#1e1e1e"
}
