    "/admin/online_users": {
      "get": {
        "description": "Get online users (connected with websockets)",
        "operationId": "get-online_users",
        "tags": [
          "private",
          "admin"
        ],
        "security": [
          {
            "cookieAuth": []
          },
          {
            "headerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "unknownClients": {
                      "type": "number"
                    },
                    "clients": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "amount": {
                            "type": "number"
                          },
                          "id": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "phone": {
                            "type": "string"
                          },
                          "permission": {
                            "type": "number"
                          }
                        },
                        "required": [
                          "amount",
                          "id",
                          "permission"
                        ]
