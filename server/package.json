{
	"name": "flawk-backend",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "14.15.0"
	},
	"scripts": {
		"env:dev": "env-cmd -f ./_env/flawk_dev.env",
		"env:build": "env-cmd -f ./_env/flawk_build.env",
		"- MAIN SCRIPTS -": "-----------------------------",
		"start:dev": "npm run env:dev npm run startLocal",
		"start:dev-js": "npm run env:dev npm run startLocalJavascript",
		"build_local": "npm run env:build npm run buildLocal",
		"build_docker": "npm run env:build npm run buildPushDocker",
		"- HELPER SCRIPTS -": "-----------------------------",
		"startLocalJavascript": "npm run lintCI && cross-env NODE_PATH=dist/ nodemon -e ts --exec \"(tsc && node --inspect=1237 --optimize_for_size --max_old_space_size=1024 dist/server.js) || exit 1\"",
		"startLocal": "npm run lintCI && cross-env ts-node-dev app/server.ts",
		"buildCI": "tsc",
		"buildLocal": "npm run auditFix && npm run testCI && npm run buildCI",
		"buildPushDocker": "npm run buildLocal && cross-env-shell docker image build -t $DOCKER_IMAGE . -f Dockerfile.local && cross-env-shell docker push $DOCKER_IMAGE && cross-env-shell docker image rm $DOCKER_IMAGE",
		"- EXTRA SCRIPTS -": "-----------------------------",
		"precommit": "lint-staged",
		"postinstall": "cd .. && git config core.hooksPath ./git-hooks",
		"test": "cross-env JEST=true jest --coverage --runInBand",
		"testCI": "cross-env JEST=true jest --bail --runInBand",
		"prettierFix": "prettier --write ./app",
		"prettierCI": "prettier --check ./",
		"lintCI": "eslint --quiet ./",
		"lintTypescriptCI": "tsc --noEmit",
		"auditFix": "npm audit fix",
		"auditCI": "npm audit --audit-level=moderate"
	},
	"dependencies": {
		"@awaitjs/express": "^0.9.0",
		"@sentry/node": "^6.11.0",
		"@sentry/tracing": "^6.11.0",
		"@vonage/server-sdk": "^2.10.10",
		"aws-sdk": "^2.939.0",
		"bcryptjs": "^2.4.3",
		"cachegoose": "^8.0.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"crypto-extra": "^1.0.1",
		"delay": "^5.0.0",
		"diacritic-regex": "^1.1.0",
		"express": "^4.17.1",
		"express-mongo-sanitize": "^2.1.0",
		"express-openapi-validator": "^4.12.14",
		"express-paginate": "^1.0.2",
		"git-repo-info": "^2.1.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"moment": "^2.29.1",
		"mongoose": "^6.0.8",
		"mongoose-lean-id": "^0.2.0",
		"mongoose-lean-virtuals": "^0.9.0",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.6.2",
		"nodemailer-express-handlebars": "^4.0.0",
		"nodemailer-html-to-text": "^3.2.0",
		"postmark": "^2.7.6",
		"rate-limiter-flexible": "^2.2.2",
		"regex-parser": "^2.2.11",
		"response-time": "^2.3.2",
		"socket.io": "^4.1.2",
		"supertest": "^6.1.3",
		"uuid": "^8.3.2",
		"validator": "^13.7.0",
		"winston-loggly-bulk": "^3.2.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.2",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^16.11.6",
		"cross-env": "^7.0.3",
		"env-cmd": "^10.1.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsdoc": "^35.4.1",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-security-node": "^1.0.14",
		"jest": "^27.3.1",
		"lint-staged": "^11.0.0",
		"mongodb-memory-server": "^8.0.0",
		"nodemon": "^2.0.9",
		"prettier": "^2.3.2",
		"ts-jest": "^27.0.7",
		"ts-node-dev": "^1.1.8",
		"tsc-files": "^1.1.2",
		"typescript": "^4.4.4"
	},
	"lint-staged": {
		"*.{js,jsx,css,less,scss,md}": [
			"eslint --quiet",
			"prettier --check",
			"cross-env JEST=true jest --bail --runInBand --findRelatedTests"
		],
		"*.{ts,tsx}": [
			"tsc-files --noEmit",
			"prettier --check",
			"cross-env JEST=true jest --bail --runInBand --findRelatedTests"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/coverage/",
			"/dist/"
		],
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"!**/node_modules/**"
		],
		"testMatch": [
			"**/*.test.js",
			"**/*.test.ts",
			"**/*.test.jsx",
			"**/*.test.tsx"
		],
		"modulePaths": [
			"<rootDir>/app/"
		],
		"setupFilesAfterEnv": [
			"./app/setupTests.js"
		]
	}
}
