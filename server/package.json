{
	"name": "flawk-backend",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": "14.15.0"
	},
	"lint-staged": {
		"*.{js,jsx,css,less,scss,ts,tsx,md}": [
			"eslint --quiet",
			"prettier --check"
		]
	},
	"scripts": {
		"env:dev": "env-cmd -f ./_env/flawk_dev.env",
		"- MAIN SCRIPTS -": "-----------------------------",
		"start:dev": "npm run env:dev npm run startLocal",
		"- HELPER SCRIPTS -": "-----------------------------",
		"startLocal": "npm run lintCI && cross-env NODE_PATH=app/ nodemon node --inspect=1237 --optimize_for_size --max_old_space_size=1024 --expose-gc app/server.js",
		"- EXTRA SCRIPTS -": "-----------------------------",
		"precommit": "lint-staged",
		"postinstall": "cd .. && git config core.hooksPath ./git-hooks",
		"test": "jest --coverage",
		"testCI": "jest",
		"prettierFix": "prettier --write ./app",
		"prettierCI": "prettier --check ./",
		"lintCI": "eslint --quiet ./",
		"auditFix": "npm audit fix",
		"auditCI": "npm audit --audit-level=moderate"
	},
	"jest": {
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/coverage/"
		],
		"collectCoverageFrom": [
			"**/*.{js,jsx}",
			"!**/node_modules/**"
		]
	},
	"dependencies": {
		"@awaitjs/express": "^0.7.2",
		"@sentry/node": "^6.11.0",
		"@sentry/tracing": "^6.11.0",
		"@vonage/server-sdk": "^2.10.10",
		"aws-sdk": "^2.939.0",
		"bcryptjs": "^2.4.3",
		"cachegoose": "^8.0.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"crypto-extra": "^1.0.1",
		"delay": "^5.0.0",
		"diacritic-regex": "^1.1.0",
		"express": "^4.17.1",
		"express-mongo-sanitize": "^2.1.0",
		"express-openapi-validator": "^4.12.14",
		"express-paginate": "^1.0.2",
		"helmet": "^4.6.0",
		"jest": "^27.0.6",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"moment": "^2.29.1",
		"mongoose": "^5.13.2",
		"mongoose-lean-id": "^0.2.0",
		"mongoose-lean-virtuals": "^0.8.0",
		"node-fetch": "^2.6.1",
		"node-schedule": "^2.0.0",
		"nodemailer": "^6.6.2",
		"nodemailer-express-handlebars": "^4.0.0",
		"nodemailer-html-to-text": "^3.2.0",
		"postmark": "^2.7.6",
		"rate-limiter-flexible": "^2.2.2",
		"regex-parser": "^2.2.11",
		"request-promise": "^4.2.6",
		"response-time": "^2.3.2",
		"socket.io": "^4.1.2",
		"supertest": "^6.1.3",
		"uuid": "^8.3.2",
		"validator": "^13.6.0",
		"winston-loggly-bulk": "^3.2.1"
	},
	"devDependencies": {
		"@types/mongoose": "^5.11.97",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"env-cmd": "^10.1.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsdoc": "^35.4.1",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-security-node": "^1.0.14",
		"lint-staged": "^11.0.0",
		"nodemon": "^2.0.9",
		"prettier": "^2.3.2"
	}
}
