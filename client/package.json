		"html-webpack-plugin": "^4.5.2",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.2"
	},
	"lint-staged": {
		"*.{js,jsx,css,less,scss,ts,tsx,md}": [
			"eslint --quiet",
			"prettier --check"
		]
	},
	"jest": {
		"testMatch": [
			"**/*.test.js",
			"**/*.test.ts",
			"**/*.test.jsx",
			"**/*.test.tsx"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not ie <= 11",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
