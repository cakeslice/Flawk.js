########## NGINX SERVER

FROM nginx:1.13.9-alpine

RUN rm -rf /etc/nginx/conf.d && mkdir -p /etc/nginx/conf.d
COPY ./default.conf /etc/nginx/conf.d/
COPY ./build /etc/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]