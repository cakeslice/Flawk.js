    "/client/notifications": {
      "get": {
        "description": "Get the user's notifications",
        "operationId": "get-notifications",
        "tags": [
          "private"
        ],
        "security": [
          {
            "cookieAuth": []
          },
          {
            "headerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "notifications": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string",
                            "format": "objectid"
                          },
                          "isRead": {
                            "type": "boolean"
                          },
                          "date": {
                            "type": "string",
                            "format": "date-time"
                          },
                          "notificationType": {
                            "type": "string"
                          },
                          "message": {
                            "type": "string"
                          },
                          "imageURL": {
                            "type": "string"
                          },
                          "fullName": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "_id",
                          "isRead",
                          "date",
                          "notificationType",
                          "message"
                        ]
                      }
                    },
                    "unreadCount": {
                      "type": "number"
                    },
                    "hasNext": {
                      "type": "boolean"
                    },
                    "pageCount": {
                      "type": "number"
                    },
                    "itemCount": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "notifications",
                    "unreadCount"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "limit"
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "page"
          }
        ]
      }
    },
